<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/itemViewSize"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingNormal"
    android:layout_marginStart="@dimen/marginNormal"
    android:gravity="center_horizontal"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/txtDayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="29 C"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontSmall"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cloudy"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fontSmall"/>
        <TextView
            android:id="@+id/txtMinTemp"
            android:layout_toEndOf="@+id/txtMaxTemp"
            android:layout_marginStart="@dimen/marginNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cloudy"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fontSmall"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imgCloud"
        android:contentDescription="@string/app_name"
        android:layout_width="@dimen/imgSliderSize"
        android:layout_height="@dimen/imgSliderSize"
        android:padding="@dimen/paddingNormal"/>

    <TextView
        android:id="@+id/txtWeatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cloudy"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontSmall"/>

</LinearLayout>